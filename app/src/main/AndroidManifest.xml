<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nodomain.betchermartin.tensorflowlitescanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/activity_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="nodomain.betchermartin.tensorflowlitescanner.httpd.ClassifierWebServerActivity"></activity>
        <activity
            android:name="nodomain.betchermartin.tensorflowlitescanner.PatientDataInputActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nodomain.betchermartin.tensorflowlitescanner.ClassifierActivity"
            android:label="@string/activity_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="nodomain.betchermartin.tensorflowlitescanner.preferences.PreferenceActivity"
            android:screenOrientation="portrait" />
    </application>

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <uses-sdk />

</manifest>